<Window x:Class="forms.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:forms" xmlns:model="clr-namespace:forms.Model" xmlns:view_model="clr-namespace:forms.View_Model" d:DataContext="{d:DesignInstance Type=view_model:ContactViewModel}"
        WindowStartupLocation="CenterScreen"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Padding="20"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel VerticalAlignment="Center">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <ListView ItemsSource="{Binding contacts }" SelectedItem="{Binding SelectedContact, Mode=TwoWay}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Id}" Width="70" />
                        <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="70" />
                        <GridViewColumn Header="Mobile" DisplayMemberBinding="{Binding Mobile}" Width="70" />
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0 20 20 0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock  Margin="0 0 10 0" FontSize="14">Name</TextBlock>
            <TextBox x:Name="txtName" Width="250" FontSize="14" Text="{Binding SelectedContact.Name}"/>

        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0 20 20 0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Margin="0 0 10 0" FontSize="14">Mobile</TextBlock>
            <TextBox x:Name="txtMobile" Width="250" FontSize="14" Text="{Binding SelectedContact.Mobile}"/>

        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0 20 20 0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="btnAdd" Content="ADD" Padding="20 10 20 10" FontSize="14" Margin="0 0 10 0" Click="btnAdd_Click"/>
            <Button x:Name="btnUpdate" Content="UPDATE" Padding="20 10 20 10" FontSize="14" Margin="0 0 10 0" Click="btnUpdate_Click"/>
            <Button x:Name="btnDelete" Content="DELETE" Padding="20 10 20 10" FontSize="14" Click="btnDelete_Click"/>

        </StackPanel>
    </StackPanel>
</Window>
